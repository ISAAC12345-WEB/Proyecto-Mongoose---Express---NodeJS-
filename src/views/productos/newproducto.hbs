<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
              <h3>NUEVO PRODUCTO</h3>  
        </div>
        <div class="card-body">
            <form action="/producto/nuevoproducto" method="POST">
                <div class="form-group">
                    <input type="text" name="titulo" class="form-control" placeholder="titulo" autofocus>
                </div>
                <div class="form-group">
                    <input type="number" step="any" name="precio" class="form-control" placeholder="precio">
                </div>
                <div class="form-group">
                    <button class="btn btn-primary">GUARDAR</button>
                    <a href="/productos" class="btn btn-secondary text-black">CANCELAR</a>
                </div>
            </form>
        </div>
    </div>
</div>