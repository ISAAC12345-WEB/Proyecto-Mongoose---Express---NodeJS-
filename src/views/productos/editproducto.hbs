<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
              <h3>EDITAR PRODUCTO</h3>  
        </div>
        <div class="card-body">
            <form action="/producto/edit/{{editar._id}}?_method=put" method="post">
                    <input type="hidden" name="_method" value="put">
                    <div class="form-group">
                        <input type="text" name="titulo" class="form-control" value="{{editar.titulo}}" placeholder="titulo" required>
                    </div>
                    <div class="form-group">
                        <input type="number" step="any" name="precio" class="form-control" value="{{editar.precio}}" placeholder="precio" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success">ACTUALIZAR</button>
                        <a href="/productos" class="btn btn-secondary text-black">CANCELAR</a>
                    </div>
            </form>
        </div>
    </div>
</div>