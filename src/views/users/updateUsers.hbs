<div class="col-md-4 mx-auto">
    <div class="card text-center">
        <div class="card-header">
              <h3>UPDATE DE CUENTA</h3>  
        </div>
        <div class="card-body">
            <form action="/users/edit/{{editar._id}}?_method=put" method="POST">
                  <input type="hidden" name="_method" value="put">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="Nombre" value="{{editar.name}}">
                </div>
                <div class="form-group">
                    <input type="email" name="email" class="form-control" placeholder="Email" value="{{editar.email}}">
                </div>
                <div class="form-group">
                    <input type="password" name="password" class="form-control" placeholder="ContraseÃ±a" value="{{editar.password}}">
                </div>
                <div class="form-group">
                        <label for="user" class="form-label">Rol</label>
                        <select id="rol" name="rol" class="form-select" aria-label="Default select example" value="{{editar.rol}}">
                            <option value="administrador">administrador</option>
                            <option value="usuario">usuario</option>
                            <option value="vendedor">vendedor</option> 
                        </select>
                </div>          
                <div class="form-group">
                    <button class="btn btn-success">GUARDAR</button>
                    <a href="/users" class="btn btn-secondary text-black">CANCELAR</a>
                </div>
            </form>
        </div>
    </div>
</div>